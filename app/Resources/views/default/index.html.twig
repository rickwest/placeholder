{% extends 'base.html.twig' %}

{% block body %}
    <div class="collapse bg-inverse" id="navbarHeader">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 py-4">
                    <h4 class="text-white">About</h4>
                    <p class="text-muted"></p>
                </div>
                <div class="col-sm-4 py-4">
                    <h4 class="text-white">Contact Me</h4>
                    <ul class="list-unstyled">
                        <li><a href="https://twitter.com/rick_west8" class="text-white" target="_blank">Follow on Twitter</a></li>
                        <li><a href="https://github.com/rickwest" class="text-white" target="_blank">Get the code on GitHub</a></li>
                        <li><a href="mailto:rickwestdev@gmail.com" class="text-white" target="_blank">Email me</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="navbar navbar-inverse bg-inverse">
        <div class="container d-flex justify-content-between">
            <a href="#" class="navbar-brand">{placematts}</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarHeader" aria-controls="navbarHeader" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </div>

    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">{placematts}</h1>
            <p class="lead text-muted">Yet another placeholder site. For people who like Matt's.</p>
        </div>
    </section>

    <div class="gallery">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-block">
                            <p class="card-text">A quick and simple service for getting pictures of Matt's for use as placeholders in your designs or code.</p>
                            <p>Just put your image size (width & height) after our URL and you'll get a placeholder.</p>
                            <div class="alert alert-info" role="alert">
                                Like this: <a href="">http://placekitten.com/200/300</a>
                                <br>
                                or greyscale: <a href="">http://placekitten.com/g/200/300</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card">
                        <img src="{{ asset('Images/Matts/1.png') }}" alt="" class="img-responsive">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3">
                    <div class="card">
                        <img src="{{ asset('Images/Matts/2.png') }}" alt="" class="img-responsive">
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="card">
                        <img src="{{ asset('Images/Matts/3.png') }}" alt="" class="img-responsive">
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="card card-xs">
                        <img src="{{ asset('Images/Matts/4.png') }}" alt="" class="img-responsive">
                    </div>
                    <div class="card card-xs">
                        <img src="{{ asset('Images/Matts/5.png') }}" alt="" class="img-responsive">
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="card card-xs">
                        <img src="{{ asset('Images/Matts/6.png') }}" alt="" class="img-responsive">
                    </div>
                    <div class="card card-xs">
                        <img src="{{ asset('Images/Matts/7.png') }}" alt="" class="img-responsive">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="text-muted">
        <div class="container">
            <p class="float-right">
                <a href="#">Back to top</a>
            </p>
            <p>{placematts} built by <a href="https://rickwest.co.uk">Rick West</a></p>
            <p>Inspired by placehold.it | placekitten.com | and many more...</p>
        </div>
    </footer>
{% endblock %}
